<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dữ liệu cần sao lưu "
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:id="@+id/title_data_save"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dung lượng"
                android:paddingStart="16dp"
                android:textSize="16sp"
                android:id="@+id/show_capacity"/>
        </LinearLayout>
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/bt_support"
        android:src="@mipmap/icon_support"
        android:scaleType="fitCenter"
        android:background="#FFF"
        />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/bt_confirm_save"
            android:src="@drawable/ic_backup_black_24dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:background="#FFF"
            />

</LinearLayout>